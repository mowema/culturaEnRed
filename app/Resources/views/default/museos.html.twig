  <ul class="cloud-points">
                <li class="cloud-point-one"><div class="punto auto-delay"><span>+</span></div></li>
                <li class="cloud-point-one"><div class="punto auto-delay"><span>+</span></div></li>
                <li class="cloud-point-one"><div class="punto auto-delay"><span>+</span></div></li>
              </ul>
  -->
{% endblock %}

{% block stylesheets %}
  <style>
    .gotoPlanta h3 {
      font-size: 24px;
    }

    #museos .bg-museos {
      background-image: none !important;
    }

    .bg-museos .background_image {
      position: absolute;
      z-index: 0;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      background: url(imgs/museos/bg-museos.jpg);
      background-position: 50% 50%;
      background-size: 130%;
      opacity: 1;
      width: 100%;
      height: 100%;
    }

    .opaque .background_image {
      background-position: 240% 50%;
      -webkit-animation: expand 5s;
    }

    #bellas-artes.sub-interna{
      width: 100%;
      height:100%;
    }
    #bellas-artes.sub-interna .temas{
      margin: 0 auto;
      width: 60%;
      height:100%;
    }

    #bellas-artes.sub-interna .tema {
      position: relative;
      display:block;
    }  

    .tema.sub-uno > div .planta-header {
      left: 10%;
    } 
    .tema.sub-uno > div .cloud-points {

      position: relative;
      display:block;
    } 
    .tema.sub-dos > div .planta-header {
      left: 70%;
      text-align: right;
    } 
    .tema.sub-tres > div .planta-header {
      left: 10%;
    }

    .planta-header h3 {
      border-radius: 4px;
      font-size: 30px;
      font-family: serif;
      background-color: rgba(60,60,60,0.1);
      padding:2px 30px;
      font-style: italic;
      margin-bottom: 4px
    }
    .planta-header p {
      text-align: center;
      font-size: 20px;
      color:violet;
      font-weight: 500;
    }
    .planta-header {
      top: 20%;
      position:absolute}

    .tema.sub-uno {
      top: 8%;
      z-index: 90;
    } 
    .tema.sub-dos {
      top: 0%;
      z-index: 80;
    }
    .tema.sub-dos .planta-image {
      opacity: .7;
    }
    .tema.sub-tres {
      top: -8%;
      z-index: 70;
    }
    .tema.sub-tres .planta-image {
      opacity: .5;
    }

    .tema > div {
      clear: both
    }

    .planta-image{
      margin: auto;
      height:220px;
      width:200px;
      display:block;
      background-image:url(content/museos/planta-medium.png)
    }
    
    .selected .planta-image{
      height:200%
    }
  </style>
{% endblock %}


{% block javascripts %}
  <!-- <script type="text/javascript" src="{{ asset('/js/script_museos.js') }}"></script> -->

  <script>
    $("#museos .temas .tema:nth-child(4) .esfera, #museos .sub-seccion"
            ).on("click", function (e) {
      $(".principal").removeClass("active").addClass("inactive")
      $(".interna").removeClass("inactive").addClass("active")
      $(".temas").removeClass("inactive")
      $(".sub-interna").removeClass("active").addClass("inactive")
      $(".ayuda").html("ELEGÍ SEGÚN TU INTERÉS")
    });

    $("#museos .seccion").on("click", function (e) {

      $(".bg-museos").removeClass("opaque")
      $(".desplegable.open").removeClass("open")
      $(".principal").removeClass("inactive").addClass("active")
      $(".interna").removeClass("active").addClass("inactive")
      $(".temas").removeClass("inactive")
      $(".sub-interna").removeClass("active").addClass("inactive")
      $(".sub-interna .temas").removeClass("active").addClass("inactive")
      $(".seccion").removeClass("small")
      $(".ayuda").html("ELEGÍ LA TEMÁTICA DE TU INTERÉS")
    });

    $("#museos .open-tema").on("click", function (e) {
      e.preventDefault()
      var subsection = "#" + $(this).data("open")
      $(subsection).removeClass("inactive").addClass("active")

      $(".seccion").addClass("small")
      $(".temas").addClass("inactive")
      $(".sub-interna .temas").removeClass("inactive").addClass("active")
      $(".ayuda").html("ELEGÍ UNA PLANTA")

      $(".bg-museos").addClass("opaque")
    });
  </script>
{% endblock %}


